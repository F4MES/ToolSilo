rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Eksisterende specifikke regler
    match /tools/{toolId} {
      allow read, write: if request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    match /associations/{associationId} {
      allow read, write: if request.auth != null;
    }

    // Generel cache-regel tilf√∏jet nederst
    match /{document=**} {
      allow read: if request.auth != null || request.time < resource.data.__readTime;
      allow write: if request.auth != null;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 